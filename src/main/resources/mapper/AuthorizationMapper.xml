<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sd.mapper.AuthorizationMapper">

    <resultMap id="BaseResultMap" type="com.sd.entity.Authorization">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="authorizationcode" column="authorizationCode" jdbcType="VARCHAR"/>
            <result property="comment" column="comment" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,name,authorizationCode,
        comment
    </sql>
    <insert id="createAuthorization">
        insert into authorization
        (name, authorizationCode, comment)
        values (#{name}, #{authorizationcode}, #{comment})
    </insert>
    <delete id="deleteAuthorization">
        delete
        from authorization
        where id = #{id};
    </delete>
    <update id="updateAuthorization">
        update authorization
        set name = #{name}, authorizationCode = #{authorizationcode}, comment = #{comment}
        where id = #{id};
    </update>
    <select id="findAllAuthorization" resultType="com.sd.entity.Authorization">
        select *
        from authorization;
    </select>
</mapper>
