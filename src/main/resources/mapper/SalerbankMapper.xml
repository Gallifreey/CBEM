<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sd.mapper.SalerbankMapper">

    <resultMap id="BaseResultMap" type="com.sd.entity.Salerbank">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="commodityid" column="commodityID" jdbcType="INTEGER"/>
            <result property="salerid" column="salerID" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,commodityID,salerID
    </sql>
    <!-- 插入新记录 -->
    <insert id="createSalerbank" parameterType="com.sd.entity.Salerbank">
        insert into salerbank (commodityID, salerID)
        values (#{commodityid}, #{salerid})
    </insert>

    <!-- 删除记录 -->
    <delete id="deleteSalerbank" parameterType="int">
        delete
        from salerbank
        where id = #{id};
    </delete>

    <!-- 更新记录 -->
    <update id="updateSalerbank" parameterType="com.sd.entity.Salerbank">
        update salerbank
        set commodityID = #{commodityid},
            salerID = #{salerid}
        where id = #{id};
    </update>

    <!-- 查询所有记录 -->
    <select id="findAllSalerbank" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from salerbank;
    </select>
</mapper>
