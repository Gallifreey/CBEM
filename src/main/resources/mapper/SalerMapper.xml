<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sd.mapper.SalerMapper">

    <resultMap id="BaseResultMap" type="com.sd.entity.Saler">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="shopid" column="shopID" jdbcType="INTEGER"/>
            <result property="salerid" column="salerID" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,shopID,salerID
    </sql>
    <!-- 插入新记录 -->
    <insert id="createSaler" parameterType="com.sd.entity.Saler">
        insert into saler (shopID, salerID)
        values (#{shopid}, #{salerid})
    </insert>

    <!-- 删除记录 -->
    <delete id="deleteSaler" parameterType="int">
        delete
        from saler
        where id = #{id};
    </delete>

    <!-- 更新记录 -->
    <update id="updateSaler" parameterType="com.sd.entity.Saler">
        update saler
        set shopID = #{shopid},
            salerID = #{salerid}
        where id = #{id};
    </update>

    <!-- 查询所有记录 -->
    <select id="findAllSaler" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from saler;
    </select>
</mapper>
