<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sd.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.sd.entity.User">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="username" column="username" jdbcType="VARCHAR"/>
            <result property="password" column="password" jdbcType="VARCHAR"/>
            <result property="role" column="role" jdbcType="SMALLINT"/>
            <result property="phone" column="phone" jdbcType="VARCHAR"/>
    </resultMap>
    <resultMap id="TokenResultMap" type="com.sd.entity.Token">
        <result property="token" column="token" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="role" column="role" jdbcType="SMALLINT"/>
        <result property="avatar" column="avatar" jdbcType="VARCHAR"/>
    </resultMap>
    <sql id="Base_Column_List">
        id,username,password,
        role,phone
    </sql>
    <!-- 插入新用户 -->
    <insert id="createUser" parameterType="com.sd.entity.User">
        insert into user (username, password, role, phone)
        values (#{username}, #{password}, #{role}, #{phone})
    </insert>

    <!-- 删除用户 -->
    <delete id="deleteUser" parameterType="int">
        delete
        from user
        where id = #{id};
    </delete>

    <!-- 更新用户 -->
    <update id="updateUser" parameterType="com.sd.entity.User">
        update user
        set username = #{username},
            password = #{password},
            role = #{role},
            phone = #{phone}
        where id = #{id};
    </update>

    <!-- 查询所有用户 -->
    <select id="findAllUser" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from user;
    </select>
    <!-- 查询所有用户 -->
    <select id="checkUP" resultMap="TokenResultMap">
        select username, password, role, avatar
        from user
        where username = #{username};
    </select>
    <select id="getByUsername" resultMap="BaseResultMap">
        select *
        from user
        where username = #{username};
    </select>
</mapper>
