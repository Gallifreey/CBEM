<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sd.mapper.CommodityMapper">

    <resultMap id="BaseResultMap" type="com.sd.entity.Commodity">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="description" column="description" jdbcType="VARCHAR"/>
            <result property="saleprice" column="salePrice" jdbcType="DECIMAL"/>
            <result property="distributionprice" column="distributionPrice" jdbcType="DECIMAL"/>
            <result property="brand" column="brand" jdbcType="SMALLINT"/>
            <result property="deliverystate" column="deliveryState" jdbcType="SMALLINT"/>
            <result property="unit" column="unit" jdbcType="SMALLINT"/>
            <result property="weight" column="weight" jdbcType="DOUBLE"/>
            <result property="bomname" column="bomName" jdbcType="VARCHAR"/>
            <result property="parentbomid" column="parentBomID" jdbcType="OTHER"/>
            <result property="childrenbomid" column="childrenBomID" jdbcType="OTHER"/>
            <result property="assembleprice" column="assemblePrice" jdbcType="DECIMAL"/>
            <result property="splitprice" column="splitPrice" jdbcType="DECIMAL"/>
            <result property="costfomula" column="costFomula" jdbcType="VARCHAR"/>
            <result property="color" column="color" jdbcType="VARCHAR"/>
            <result property="size" column="size" jdbcType="VARCHAR"/>
            <result property="skucolor" column="skuColor" jdbcType="VARCHAR"/>
            <result property="skusize" column="skuSize" jdbcType="DOUBLE"/>
            <result property="skubarcodemsg" column="skuBarCodeMsg" jdbcType="OTHER"/>
            <result property="skuassociatedid" column="skuAssociatedID" jdbcType="OTHER"/>
            <result property="skuweight" column="skuWeight" jdbcType="DECIMAL"/>
            <result property="status" column="status" jdbcType="SMALLINT"/>
            <result property="remaining" column="remaining" jdbcType="INTEGER"/>
            <result property="barcodemsg" column="barCodeMsg" jdbcType="OTHER"/>
            <result property="picture" column="picture" jdbcType="VARCHAR"/>
            <result property="publishtime" column="publishTime" jdbcType="TIMESTAMP"/>
            <result property="onsaletime" column="onsaleTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,`name`,description,
        salePrice,distributionPrice,brand,
        deliveryState,unit,weight,
        bomName,parentBomID,childrenBomID,
        assemblePrice,splitPrice,costFomula,
        color,`size`,skuColor,
        skuSize,skuBarCodeMsg,skuAssociatedID,
        skuWeight,status,remaining,
        barCodeMsg,picture,publishTime,
        onsaleTime
    </sql>
    <!-- 插入新商品 -->
    <insert id="createCommodity" parameterType="com.sd.entity.Commodity">
        insert into commodity (
            name, description, salePrice, distributionPrice, brand,
            deliveryState, unit, weight, bomName, parentBomID,
            childrenBomID, assemblePrice, splitPrice, costFomula,
            color, size, skuColor, skuSize, skuBarCodeMsg,
            skuAssociatedID, skuWeight, status, remaining,
            barCodeMsg, picture, publishTime, onsaleTime
        )
        values (
                   #{name}, #{description}, #{saleprice}, #{distributionprice}, #{brand},
                   #{deliverystate}, #{unit}, #{weight}, #{bomname}, #{parentbomid},
                   #{childrenbomid}, #{assembleprice}, #{splitprice}, #{costfomula},
                   #{color}, #{size}, #{skucolor}, #{skusize}, #{skubarcodemsg},
                   #{skuassociatedid}, #{skuweight}, #{status}, #{remaining},
                   #{barcodemsg}, #{picture}, #{publishtime}, #{onsaletime}
               )
    </insert>
    <insert id="addBom" parameterType="com.sd.entity.commodity.Bom">
        insert into commodity (
            bomName, assemblePrice, splitPrice, costFomula
        )
        values (
                   #{bomName}, #{assemblePrice}, #{splitPrice}, #{costFomula}
               )
    </insert>
    <insert id="addBasicInfo" parameterType="com.sd.entity.commodity.BasicInfo">
        insert into commodity (
            name, description, salePrice, distributionPrice, brand,
            deliveryState, unit, weight
        )
        values (
                   #{name}, #{description}, #{salePrice}, #{distributionPrice}, #{brand},
                   #{deliveryState}, #{unit}, #{weight}
               )
    </insert>
    <insert id="addMeta" parameterType="com.sd.entity.commodity.Meta">
        insert into commodity (
            barCodeMsg, picture
        )
        values (
                   #{barCodeMsg}, #{picture}
               )
    </insert>
    <insert id="addSku" parameterType="com.sd.entity.commodity.Sku">
        insert into commodity (
            skuColor, skuBarCodeMsg, skuAssociatedID, skuWeight
        )
        values (
                   #{skuColor}, #{skuBarCodeMsg}, #{skuAssociatedID}, #{skuWeight}
               )
    </insert>
    <!-- 删除商品 -->
    <delete id="deleteCommodity" parameterType="int">
        delete
        from commodity
        where id = #{id};
    </delete>

    <!-- 更新商品 -->
    <update id="updateCommodity" parameterType="com.sd.entity.Commodity">
        update commodity
        <trim prefix="set" suffixOverrides=",">
            <if test="name != null">
                name = #{name},
            </if>
            <if test="description != null">
                description = #{description},
            </if>
            <if test="saleprice != null">
                salePrice = #{saleprice},
            </if>
            <if test="distributionprice != null">
                distributionPrice = #{distributionprice},
            </if>
            <if test="brand != null">
                brand = #{brand},
            </if>
            <if test="deliverystate != null">
                deliveryState = #{deliverystate},
            </if>
            <if test="unit != null">
                unit = #{unit},
            </if>
            <if test="weight != null">
                weight = #{weight},
            </if>
            <if test="bomname != null">
                bomName = #{bomname},
            </if>
            <if test="parentbomid != null">
                parentBomID = #{parentbomid},
            </if>
            <if test="childrenbomid != null">
                childrenBomID = #{childrenbomid},
            </if>
            <if test="assembleprice != null">
                assemblePrice = #{assembleprice},
            </if>
            <if test="splitprice != null">
                splitPrice = #{splitprice},
            </if>
            <if test="costfomula != null">
                costFomula = #{costfomula},
            </if>
            <if test="color != null">
                color = #{color},
            </if>
            <if test="size != null">
                size = #{size},
            </if>
            <if test="skucolor != null">
                skuColor = #{skucolor},
            </if>
            <if test="skusize != null">
                skuSize = #{skusize},
            </if>
            <if test="skubarcodemsg != null">
                skuBarCodeMsg = #{skubarcodemsg},
            </if>
            <if test="skuassociatedid != null">
                skuAssociatedID = #{skuassociatedid},
            </if>
            <if test="skuweight != null">
                skuWeight = #{skuweight},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="remaining != null">
                remaining = #{remaining},
            </if>
            <if test="barcodemsg != null">
                barCodeMsg = #{barcodemsg},
            </if>
            <if test="picture != null">
                picture = #{picture},
            </if>
            <if test="publishtime != null">
                publishTime = #{publishtime},
            </if>
            <if test="onsaletime != null">
                onsaleTime = #{onsaletime},
            </if>
        </trim>
        where id = #{id}
    </update>

    <!-- 查询所有商品 -->
    <select id="findAllCommodity" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from commodity;
    </select>


    <!--    根据uid查询商品-->
    <select id="findCommodityByUid" resultMap="BaseResultMap">
        select *
        from commodity
        where id
        in
        (
            select commodityID
            from vendorbank
            where vendorID=#{uid}
                  )
        ;
    </select>

    <select id="findCommodityBySid" resultMap="BaseResultMap">
        select *
        from commodity
        where id
                  in
              (
                  select commodityID
                  from storagebank
                  where storageID=#{id}
              )
        ;
    </select>
    <!--    根据一些值来查询商品-->
    <select id="findCommodityByNBDPS" resultMap="BaseResultMap">
        select *
        from commodity
        where name like concat('%', #{name}, '%')
          or brand=#{brand}
          or deliveryState=#{deliverystate}
          or publishTime=#{publishtime}
          or salePrice=#{saleprice}
        ;
    </select>
    <!--    批量删除-->
    <delete id="deleteCommodities" parameterType="list">
        delete
        from `commodity`
        where id
        in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>
    <!--    根据ID来查询商品-->
    <select id="findCommodityByID" resultMap="BaseResultMap">
        select *
        from `commodity`
        where id=#{id}
        ;
    </select>
</mapper>
